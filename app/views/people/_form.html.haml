= semantic_form_for @person do |f|
  = f.inputs do
    = f.input :first_name
    = f.input :last_name
    = f.input :birthday, :as => :date_select, :start_year => Date.today.year - 115, :end_year => Date.today.year
    = f.input :email, :as => :email
    = f.input :mobile, :as => :phone
    = f.input :crews

  = f.actions do
    = f.action :submit, :as => :input
