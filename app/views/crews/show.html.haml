%p#notice= notice

.application-doc  
  .application-section{:id => "application-regatta"}
    Regatta:
    - if @crew.race.blank?
    - else 
      Regatta:
      %br
      = @crew.race.regattum.organizer.name
      %br
      = @crew.race.regattum.name
    .change
      - link_to 'Ändra', edit_crew_path(@crew, :section => :race)      
  
  .application-section
    Segling:
    %div
      - if @crew.race.blank?
        .change
          = link_to 'Välj', edit_crew_path(@crew, :section => :race) 
      - else 
        Seglingsperiod: 
        = @crew.race.period
        timmar
        %br 
        Start: 
        = @crew.race.description
        .change
          = link_to 'Ändra', edit_crew_path(@crew, :section => :race)      

  .application-section
    Startplats:
    - unless @crew.race.blank?
      - if @crew.point.blank?
        %div
        .change
          = link_to 'Välj', edit_crew_path(@crew, :section => :start)                
      - else
        %div
          =@crew.point.number_name
        .change
          = link_to 'Ändra', edit_crew_path(@crew, :section => :start)                


  .application-section
    Målgång:
    - unless @crew.race.blank?
      %div
      - unless @crew.race.blank?
        - if @crew.race.regattum.common_goal.blank?
          Samma som startplatsen, #{@crew.point.number_name unless @crew.point.blank?}.
        - else
          - if @crew.race.regattum.common_goal_only
            Gemensam målgång, #{@crew.race.regattum.common_goal.number_name}).
          - else 
            - if @crew.common_goal
              Gemensam målgång, #{@crew.race.regattum.common_goal.number_name}.
            - else
              Samma som startplatsen, #{@crew.point.number_name unless @crew.point.blank?}.         
            .change
              = link_to 'Ändra', edit_crew_path(@crew, :section => :goal)      
        
  .application-section
    Båt:
    -unless @crew.boat.blank?
      %div
        = @crew.boat.name
        %br
        Entypsbåt:
        = @crew.boat.boat_type
        %br
        Segelnummer:
        = @crew.boat.sail_number
    .change
      = link_to 'Ändra', edit_crew_path(@crew, :section => :boat)      
          
  .application-section
    Besättning
    %p
      Befälhavare:
      %br
      - person = @people.first
      = link_to "#{person.first_name} #{person.last_name}, #{person.email}", person 
    %p
      Gastar:
      %ul
        - for person in @people
          %li
            = link_to "#{person.first_name} #{person.last_name}, #{person.email}", person 
    .change
      = link_to 'Ändra', edit_crew_path(@crew, :section => :crew)      
                  
  .application-section
    Samling efter seglingen
    %div
      Inga anmälda till middagen.
      .change
        = link_to 'Ändra', edit_crew_path(@crew, :section => :gathering)      

  .application-section
    %p
      Du kommer att kunna komplettera anmälan efter att du skickat in den.
    = button_to "Skicka in anmälan"
    %p
      = link_to "Släng anmälan"
= link_to 'Edit', edit_crew_path(@crew)
\|
= link_to 'Back', crews_path
